doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0")
    link(rel="stylesheet", href="/styles/main.css")
    link(rel="stylesheet", href="/styles/events.css")
    title Personnel Events page
  body
    nav
      a.logo(href="/")
        img(src="/images/logo.png", alt="logo", width="40px")
        h2 vents
      ul.list
        li
          a(href="/") Home
        li
          a(href="/posts/allpost") All Events
        li 
            a(href="/posts/addEvent") Add events   
      .profile 
        img(src=users[0].image, alt=users[0].name + " Image" )
      .menu
        span.material-symbols-outlined
            | widgets
      .close
        span.material-symbols-outlined
            | close
    main.posts
     each post , index in posts
        .Post
            .post
                .post-content
                    .profile 
                      img(src=users[index].image, alt=users[index].name + " Image" )
                      p=users[index].name
                    img(src=post.image, alt='Post Image')
                    p=post.text
                .comment-imojis 
                    .imojis 
                        .left
                            img(src="/images/hurt.png", alt="hurt" width="30px" height="30px")
                            .reactions 
                              img(src="/images/like.png", alt="like" width="40px" height="40px" )
                              img(src="/images/adore.png", alt="adore" width="40px" height="35x")
                              img(src="/images/haha.png", alt="haha" width="30px" height="30px")
                              img(src="/images/wow.png", alt="wow" width="40px" height="30px")
                              img(src="/images/said.png", alt="said" width="40px" height="35px")
                              img(src="/images/angry.png", alt="angry" width="30px" height="30px")    
                            span.material-symbols-outlined
                                | near_me
                        .right 
                            span.material-symbols-outlined
                                | bookmark
                            span.material-symbols-outlined
                                | maps_ugc
            .comments 
                .title 
                  h2 Comments
                  span.material-symbols-outlined
                                | more_horiz
                .comment
                  each comment  in post.comments
                          .comment-content
                            .profile 
                                img(src=users[index].image, alt=users[index].name + " Image" )
                                .texts
                                    p=users[index].name
                                    p=comment.comment
                            .delete-update 
                                form(action="/deleteComment", method="post" )
                                  span.material-symbols-outlined
                                    | close
                                form(action="/updateComment", method="post" )    
                                  span.material-symbols-outlined
                                    | edit 
                                form(action="/add-reaction", method="post" )     
                                  img(src="/images/add-reaction.png", alt="add-reaction" width="20px" height="20px")  
                                  .reactions2 
                                    img(src="/images/like.png", alt="like" width="40px" height="40px" )
                                    img(src="/images/adore.png", alt="adore" width="40px" height="35x")
                                    img(src="/images/haha.png", alt="haha" width="30px" height="30px")
                                    img(src="/images/wow.png", alt="wow" width="40px" height="30px")
                                    img(src="/images/said.png", alt="said" width="40px" height="35px")
                                    img(src="/images/angry.png", alt="angry" width="30px" height="30px")          

                .add-comment 
                  form(action=`/add/:${post}`, method="post")
                    input(type="text" placeholder="Add comment...")
                    button.add(type="submit") Add

    .account 
      .container
          span.material-symbols-outlined
            | close
          img(src=users[0].image, alt="user image")
          h2 Username
            p=users[0].name 
          h2 Email  
            p=users[0].email 
          h2 Password
            p=users[0].password 
          .btns2  
            button(type="submit")
              a(href="/") 
                span.material-symbols-outlined
                                | logout
            button(type="submit")
              a(href="/updateAccount") 
                span.material-symbols-outlined
                                | edit 

    .update-delete 
        .container
            span.material-symbols-outlined
                | close
            .btns2  
                button(type="submit")
                    a(href="/posts/updateEvent") 
                        span.material-symbols-outlined
                                | edit
                button(type="submit")
                      form(action=`/posts/delete/` , method="DELETE")  
                        span.material-symbols-outlined
                            | delete 
            

    script(src="/scripts/script.js")
    script(src="/scripts/script2.js")
